<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7">

    <!-- Fixed Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:padding="16dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Petsy Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_petsy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_logo">

            <ImageView
                android:id="@+id/icon_back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/white_bg_two"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_back"
                app:tint="#333333" />

            <TextView
                android:id="@+id/text_screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Product Details"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Share/Delete -->
        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white_bg_two"
            android:padding="8dp"
            android:src="@drawable/ic_blackheart"
            app:layout_constraintEnd_toStartOf="@id/icon_share"
            app:layout_constraintTop_toBottomOf="@id/image_logo" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/white_bg_two"
            android:padding="8dp"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingBottom="24dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/product1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Product Info -->
            <LinearLayout
                android:id="@+id/layout_product_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/product_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Title -->
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooked Dog Food"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <!-- Brand and Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By "
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Natural Balance"
                        android:textColor="#2e7d32"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="130dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        app:tint="#fbbc04"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8 (2.2k)"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Price and Quantity -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±170.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginEnd="16dp" />

                    <ImageButton
                        android:id="@+id/btn_decrease_quantity"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/white_circle_bg"
                        android:src="@drawable/ic_remove"
                        app:tint="#555555"
                        android:contentDescription="Decrease Quantity"
                        android:padding="6dp" />

                    <TextView
                        android:id="@+id/quantity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <ImageButton
                        android:id="@+id/btn_increase_quantity"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/white_circle_bg"
                        android:src="@drawable/ic_add"
                        app:tint="#388e3c"
                        android:contentDescription="Increase Quantity"
                        android:padding="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Ingredients Section -->
            <LinearLayout
                android:id="@+id/layout_ingredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:padding="6dp"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/layout_product_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/product_ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Chicken Thighs, Long-Grain White Rice, Long-Grain Brown Rice, Chicken Liver, Kale, Carrots, Applies, Sunflower Oil, Flaxseed Oil, Omega Marine Microalgae Oil, JustFoodForDogs Nutrient Blend; (Dicalcium Phosphate, Calcium Carbonate, Salt, Choline Bitartrate, Potassium Iodide, Zinc Amino Acid Chelate, Magnesium Amino Acid Chelate, Vitamin E Supplement, Ferrous Amino Acid Chelate, Copper Amino Acid Chelate, Cholecalciferol (source of Vitamin D3), d-Calcium Pantothenate, Riboflavin, Vitamin B12 Supplement)."
                    android:textColor="#424242"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Reviews Section -->
            <LinearLayout
                android:id="@+id/layout_reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:padding="6dp"
                app:layout_constraintTop_toBottomOf="@id/layout_ingredients"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Reviews Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average Rating"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginEnd="4dp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                app:tint="#fbbc04" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Review Items -->
                <!-- Review 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/white_bg_two">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/person1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/white_circle_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joana Viray"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This dog food is high quality and flavorful. Dogs enjoy the taste and texture of this food. In addition, the product is well-packaged and arrives in good condition."
                            android:textSize="12sp"
                            android:textColor="#424242"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Review 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/white_bg_two">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/person2"
                        android:scaleType="centerCrop"
                        android:background="@drawable/white_circle_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Banjo Javier"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#e0e0e0" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My dog loves the new treats, and the shipping was super fast. Will definitely buy again!"
                            android:textSize="12sp"
                            android:textColor="#424242"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Review 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/white_bg_two">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/person3"
                        android:scaleType="centerCrop"
                        android:background="@drawable/white_circle_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clara Flores"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#fbbc04"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#e0e0e0"
                                    android:layout_marginEnd="1dp" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="#e0e0e0" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Always reliable! I get all my pet supplies here now, and everything is top quality. Easy to order and quick delivery."
                            android:textSize="12sp"
                            android:textColor="#424242"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- See All Reviews Button -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all 2.2k reviews"
                    android:textSize="14sp"
                    android:textColor="#2e7d32"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Fixed Action Buttons at Bottom -->
    <LinearLayout
        android:id="@+id/layout_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F7F7F7"
        android:elevation="8dp">

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_outline"
            android:text="Add To Cart"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAllCaps="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/green_button_bg"
            android:text="Check Out"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>