<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Payment_Methods">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg_two"
        android:contentDescription="Arrow Back"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#333333" />

    <!-- Title -->
    <TextView
        android:id="@+id/shipping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Payment Methods"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bank Cards Section -->
    <LinearLayout
        android:id="@+id/bank_cards_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/shipping_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Bank Cards Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Bank Cards"
            android:layout_marginStart="16dp"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Empty Card Area -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white"
                android:layout_marginEnd="12dp" />

            <!-- Add Card Button -->
            <LinearLayout
                android:id="@+id/add_card_button"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/green_button_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Gcash Section -->
    <LinearLayout
        android:id="@+id/gcash_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/bank_cards_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gcash Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Gcash"
            android:layout_marginStart="16dp"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Gcash Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Gcash Card Area -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white"
                android:layout_marginEnd="12dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Gcash Logo/Icon placeholder -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GCash"
                    android:textSize="16sp"
                    android:textColor="#0066CC"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Account info placeholder -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add your GCash account"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Add Gcash Button -->
            <LinearLayout
                android:id="@+id/add_gcash_button"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/green_button_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Sheet Overlay -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Sheet for Add Number -->
    <LinearLayout
        android:id="@+id/bottom_sheet_gcash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        android:translationY="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Handle Bar -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0"
            android:layout_marginTop="-8dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Number"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Number Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Number Input -->
        <EditText
            android:id="@+id/et_gcash_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Required"
            android:inputType="phone"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Cancel Button -->
            <TextView
                android:id="@+id/btn_cancel_gcash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#666666"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <!-- Add Button -->
            <TextView
                android:id="@+id/btn_add_gcash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Sheet for Add Card -->
    <LinearLayout
        android:id="@+id/bottom_sheet_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        android:translationY="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Handle Bar -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0"
            android:layout_marginTop="-8dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Card"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Card Holder Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Holder"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Card Holder Input -->
        <EditText
            android:id="@+id/et_card_holder"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Required"
            android:inputType="textPersonName|textCapWords"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <!-- Card Number Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Card Number Input -->
        <EditText
            android:id="@+id/et_card_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Required"
            android:inputType="number"
            android:maxLength="19"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:layout_marginBottom="16dp" />

        <!-- Valid and CVV Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Valid Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="MM/YY"
                    android:inputType="number"
                    android:maxLength="5"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999" />

            </LinearLayout>

            <!-- CVV Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVV"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Required"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999" />

            </LinearLayout>

        </LinearLayout>

        <!-- Save Changes Button -->
        <TextView
            android:id="@+id/btn_save_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/green_button_bg"
            android:text="Save Changes"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>