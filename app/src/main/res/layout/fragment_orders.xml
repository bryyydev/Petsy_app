<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/purchases_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Petsy Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_petsy" />

        <!-- Toolbar -->
        <LinearLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Back + Title -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/white_bg_two"
                    android:contentDescription="Go Back"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#333333" />

                <TextView
                    android:id="@+id/title_purchases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Purchases"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Search + Notifications -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_search"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/white_bg_two"
                    android:contentDescription="Search"
                    android:padding="8dp"
                    android:src="@drawable/ic_search"
                    app:tint="#333333" />

                <ImageView
                    android:id="@+id/btn_notifications"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/white_bg_two"
                    android:contentDescription="Notifications"
                    android:padding="8dp"
                    android:src="@drawable/ic_bell"
                    app:tint="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Tabs -->
    <HorizontalScrollView
        android:id="@+id/tabs_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <Button
                android:id="@+id/btn_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_outline"
                android:paddingHorizontal="20dp"
                android:text="To Pay"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_to_ship"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_outline"
                android:paddingHorizontal="20dp"
                android:text="To Ship"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_to_receive"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_outline"
                android:paddingHorizontal="20dp"
                android:text="To Receive"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_completed"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_outline"
                android:paddingHorizontal="20dp"
                android:text="Completed"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/orders_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabs_scroll_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
