<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ProfileStat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CardTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ProfileButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ProfileRow">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DDD</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item> <!-- Bigger icons -->
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">4dp</item> <!-- optional spacing tweak -->
    </style>




</resources>
